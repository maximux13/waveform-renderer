{
  "name": "waveform-renderer",
  "description": "High-performance audio waveform visualization library for the web. Create customizable, interactive waveform renderers with TypeScript support and zero dependencies.",
  "version": "1.0.0-beta.2",
  "author": {
    "name": "Andres Alarcon",
    "email": "work@andrez.co"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maximux13/waveform-renderer.git"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@vitest/coverage-v8": "^3.2.4",
    "lint-staged": "^16.1.2",
    "np": "^10.2.0",
    "oxlint": "^1.3.0",
    "prettier": "^3.6.0",
    "tsdown": "^0.12.8",
    "typescript": "^5.3.3",
    "upgradeps": "^2.0.6",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "bugs": {
    "url": "https://github.com/maximux13/waveform-renderer/issues"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md",
    "CHANGELOG.md",
    "src",
    "package.json"
  ],
  "homepage": "https://github.com/maximux13/waveform-renderer#readme",
  "keywords": [
    "waveform",
    "audio",
    "canvas",
    "visualization",
    "audio-visualization",
    "audio-waveform",
    "typescript",
    "web-audio",
    "html5-canvas",
    "audio-player",
    "sound-visualization",
    "wave",
    "peaks",
    "renderer",
    "audio-renderer",
    "interactive",
    "audio-visualization-library",
    "waveform-renderer",
    "canvas-renderer"
  ],
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "vite --host",
    "build": "tsdown",
    "test": "vitest",
    "type-check": "tsc --noEmit",
    "lint": "oxlint ./src",
    "test:coverage": "vitest --coverage",
    "format": "prettier --write ./src",
    "upgrade": "upgradeps",
    "release": "pnpm build && np"
  },
  "jsdelivr": "./dist/waveform-renderer.iife.js",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  }
}
