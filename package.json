{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "oxlint": "^1.3.0",
    "prettier": "^3.6.0",
    "typescript": "^5.3.3",
    "upgradeps": "^2.0.6"
  },
  "scripts": {
    "dev:lib": "pnpm --filter waveform-renderer build --watch",
    "dev:docs": "pnpm --filter docs dev",
    "build": "pnpm -r build",
    "build:lib": "pnpm --filter waveform-renderer build",
    "build:docs": "pnpm --filter docs build",
    "release:lib": "echo 'TODO: Implement release process for waveform-renderer library'",
    "test": "pnpm -r test",
    "type-check": "pnpm -r type-check",
    "lint": "oxlint packages/*",
    "test:coverage": "pnpm -r test:coverage",
    "format": "prettier --write packages/*",
    "upgrade": "upgradeps",
    "release": "pnpm build:lib && pnpm release:lib",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "oxlint",
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.12.4"
}
