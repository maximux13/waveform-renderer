{
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@clack/prompts": "^0.11.0",
    "chalk": "^5.6.0",
    "execa": "^9.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "oxlint": "^1.3.0",
    "prettier": "^3.6.0",
    "semver": "^7.7.2",
    "typescript": "^5.3.3",
    "upgradeps": "^2.0.6"
  },
  "scripts": {
    "dev:lib": "pnpm --filter waveform-renderer build --watch",
    "dev:docs": "pnpm --filter docs dev",
    "build": "pnpm -r build",
    "build:lib": "pnpm --filter waveform-renderer build",
    "build:docs": "pnpm --filter docs build",
    "release:lib": "node scripts/release.js",
    "test": "pnpm -r test",
    "type-check": "pnpm -r type-check",
    "lint": "oxlint packages/*",
    "test:coverage": "pnpm -r test:coverage",
    "format": "prettier --write packages/*",
    "upgrade": "upgradeps",
    "release": "pnpm release:lib",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "oxlint",
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.12.4"
}
