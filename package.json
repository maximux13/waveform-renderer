{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^22.10.1",
    "@vercel/analytics": "^1.5.0",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "oxlint": "^1.3.0",
    "prettier": "^3.6.0",
    "tailwindcss": "^4.1.11",
    "tweakpane": "^4.0.5",
    "typescript": "^5.3.3",
    "upgradeps": "^2.0.6",
    "vite": "^6.3.5"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "pnpm -r build",
    "build:lib": "pnpm --filter waveform-renderer build",
    "build:webpage": "pnpm build:lib && vite build --mode webpage",
    "release:lib": "echo 'TODO: Implement release process for waveform-renderer library'",
    "test": "pnpm -r test",
    "type-check": "pnpm -r type-check",
    "lint": "oxlint packages/*",
    "test:coverage": "pnpm -r test:coverage",
    "format": "prettier --write packages/*",
    "upgrade": "upgradeps",
    "release": "pnpm build:lib && pnpm release:lib",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "oxlint",
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.12.4"
}
